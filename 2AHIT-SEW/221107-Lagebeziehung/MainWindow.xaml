<Window x:Class="_221107_Lagebeziehung.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_221107_Lagebeziehung"
        mc:Ignorable="d"
        Title="Lagebeziehung Punkt und Kreis" Height="205.422" Width="360.844">

    <StackPanel Orientation="Vertical">

        <StackPanel Orientation="Horizontal">
            <Label Content="Radius:" Margin="5"/>
            <TextBox x:Name="txtRadius" MinWidth="60" TextAlignment="Right" Margin="5"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="x-Koordinate:" Margin="5"/>
            <TextBox x:Name="txtXCoord" MinWidth="60" TextAlignment="Right" Margin="5"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="y-Koordinate:" Margin="5"/>
            <TextBox x:Name="txtYCoord" MinWidth="60" TextAlignment="Right" Margin="5"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Lagebeziehung:" Margin="5"/>
            <Label x:Name="lblPosition"  Content="---" MinWidth="60" Margin="5"/>
        </StackPanel>

        <Button x:Name="btnCalc" Content="Berechne" Click="btnCalc_Click" Margin="5"/>

    </StackPanel>
</Window>
