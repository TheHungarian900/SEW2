<Window x:Class="_221020_WPF_Hello.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_221020_WPF_Hello"
        mc:Ignorable="d"
        Title="WPF Playground" Height="250" Width="400">

    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label x:Name="lblBlaBla" Content="Enter Text:" Margin="8"/>
            <TextBox x:Name="txtBlaBla" Height="23" Text="change me" Width="200" TextChanged="TextBox_TextChanged"/>
            

        </StackPanel>
    
        <Button x:Name="btnReset" Content="Reset" Margin="8" Click="btnClick"/>

    </StackPanel>

</Window>
