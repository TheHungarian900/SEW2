<Window x:Class="_221124_HighLow_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_221124_HighLow_WPF"
        mc:Ignorable="d"
        Title="HighLow-Ratespiel" Height="230" Width="418">
    <StackPanel>

        <StackPanel Orientation="Horizontal" Margin="2">
            <TextBox x:Name="txtNum" MinWidth="150" MinHeight="40" FontSize="20" Margin="20" IsReadOnly="True" />
            <Label x:Name="lblClue" Content="Press Start to begin!" MinWidth="75" MinHeight="40" FontSize="10"
                   Margin="0, 20" VerticalContentAlignment="Center" />
            <Label x:Name="lblTries" Content="" MinWidth="75" MinHeight="40" FontSize="10"
                   Margin="10, 20" VerticalContentAlignment="Center" />
        </StackPanel>

        <Button x:Name="btnCheck" Content="Start" FontSize="20" Margin="10" Click="btnCheck_Click" />
        <Button x:Name="btnExit" Content="Exit" FontSize="20" Margin="10" Click="btnExit_Click" />

    </StackPanel>
</Window>
