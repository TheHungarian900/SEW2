<Window x:Class="_221201_QuadSolver.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_221201_QuadSolver"
        mc:Ignorable="d"
        Title="QuadSolver" Height="400" Width="300">
    <Canvas>

        <TextBox x:Name="txtA" Height="23" Canvas.Left="104" TextWrapping="Wrap" Text="" Canvas.Top="32" Width="120"/>
        <TextBox x:Name="txtB" Height="23" Canvas.Left="104" TextWrapping="Wrap" Text="" Canvas.Top="85" Width="120"/>
        <TextBox x:Name="txtC" Height="23" Canvas.Left="104" TextWrapping="Wrap" Text="" Canvas.Top="140" Width="120"/>

        <Label Content="a:" Canvas.Left="49" Canvas.Top="28"/>
        <Label Content="b:" Canvas.Left="49" Canvas.Top="82"/>
        <Label Content="c:" Canvas.Left="49" Canvas.Top="136"/>

        <Button x:Name="btnResult" Content="Find Solution" Canvas.Left="49" Canvas.Top="249" Width="135"
                FontSize="20" Click="Button_Click" Height="31"/>
        <Label x:Name="lblResult" Content="..." Canvas.Left="49" Canvas.Top="190"/>

        <Button x:Name="btnExit" Content="Exit" Canvas.Left="49" Canvas.Top="322" Width="135"
                FontSize="20" Height="31" Click="btnExit_Click"/>

    </Canvas>
</Window>
